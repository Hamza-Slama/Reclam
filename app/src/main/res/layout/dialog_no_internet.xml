<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ig_no_internet"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icons_no_internet" />

            <TextView
                android:id="@+id/tv_ooops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ig_no_internet"
                android:layout_centerHorizontal="true"
                android:text="Oooops !"
                android:textColor="#585656"
                android:textSize="30dp" />

            <TextView

                android:id="@+id/tv_show_message_no_internet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_ooops"
                android:layout_centerHorizontal="true"
                android:text="@string/app_names"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_show_message_no_internet_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_show_message_no_internet"
                android:layout_centerHorizontal="true"
                android:text="Check your connection."
                android:textSize="16dp" />

            <Button
                android:id="@+id/btn_close_reponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_show_message_no_internet_2"
                android:layout_margin="30dp"
                android:textAllCaps="false"
                android:background="@drawable/background_login"
                android:text="Try Again"

                android:textColor="#FFF"
                android:textSize="30dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>